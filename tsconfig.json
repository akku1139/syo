{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Module
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true, // Windows...
    "resolveJsonModule": true,

    // Output
    "declaration": true,
    //"noEmitOnError": true,

    //"allowImportingTsExtensions": true,
    // https://zenn.dev/uhyo/articles/rewrite-relative-import-extensions-read-before-use
    "rewriteRelativeImportExtensions": true,

    // Linting
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": false, // Valibot schema

    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist", // fake

    "skipLibCheck": true, // Types do farm depend on?
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "bin"
  ]
}
